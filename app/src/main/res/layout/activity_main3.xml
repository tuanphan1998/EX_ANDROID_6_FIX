<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">
    <TextView
        android:id="@+id/txtdk1"
        android:layout_width="match_parent"
        android:text="Nhập tên"
        android:textSize="22sp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:id="@+id/edk1"
        android:layout_width="match_parent"
        android:layout_below="@+id/txtdk1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"></EditText>
    <TextView
        android:id="@+id/txtdk2"
        android:layout_width="match_parent"
        android:text="Nhập Mật khẩu"
        android:layout_below="@+id/edk1"
        android:textSize="22sp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:id="@+id/edk2"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_below="@+id/txtdk2"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"></EditText>

    <TextView
        android:id="@+id/txtdk3"
        android:layout_width="match_parent"
        android:text="Nhập lại Mật khẩu"
        android:layout_below="@+id/edk2"
        android:textSize="22sp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:id="@+id/edk3"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_below="@+id/txtdk3"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"></EditText>

    <Button
        android:id="@+id/btn33"
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/edk3"
        android:text="Đăng ký"
        android:layout_height="wrap_content"></Button>


</RelativeLayout>